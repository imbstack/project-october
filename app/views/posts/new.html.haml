.span12
  %h2 Post A New Article
  = form_for(Post.new, :html => { :class => 'form-horizontal' }) do |f|
    .control-group
      .control-label
        =f.label :title
      .controls
        =f.text_field :title
    .control-group
      .control-label
        =f.label :url
      .controls
        =f.text_field :url
    .form-actions
      =f.submit 'Post Article!', :class => 'btn'
